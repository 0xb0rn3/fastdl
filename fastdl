    if [[ "$has_network" == true ]]; then
        echo "Host System â”€â”€ $HOST_INTERFACE â”€â”€ Bridge $BRIDGE_NAME â”€â”€ Internet"
        echo "                                    â”‚"
        echo "                                VLAN $VLAN_ID â”€â”€ VM eth0 (isolated)"
    fi

    if [[ "$has_usb" == true ]]; then
        echo "USB WiFi Adapter â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ VM wlan0 (direct passthrough)"
    fi

